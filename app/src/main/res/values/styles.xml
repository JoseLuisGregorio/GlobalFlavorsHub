<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutHintText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="imageStyle_corners">
        <item name="cornerSizeTopRight">@dimen/dp_24</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_24</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="OfTitleBlackBold20">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="OfTitleBlackBoldCenter30">
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="OfTitleBlackSemiBoldCenter18">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="OfTitleBlackRegular15">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
</resources>
